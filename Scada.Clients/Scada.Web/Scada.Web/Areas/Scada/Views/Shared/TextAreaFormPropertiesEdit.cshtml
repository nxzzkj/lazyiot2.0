                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="textarea_Number" value="5"
                                   placeholder="请输入唯一的表单ID(英文字符加数组)">
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer"> <a id="textarea_propertiessave" class="btn btn-primary" data-dismiss="modal">保存</a> <a class="btn" data-dismiss="modal">关闭</a> </div>
